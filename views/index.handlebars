<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Burgers that have not been devoured</h2>
            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Burgers that have been devoured</h2>
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>
</div>




